#!/command/with-contenv sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Test setup.
#======================================================================================================================

${BF_LIB}/test-setup


#======================================================================================================================
# Run rclone sync with options to create a mirror.
# (Config file location is read from environment variables by rclone.)
#======================================================================================================================

bf-echo "Executing rclone mirror..."
rclone sync "${BACKUP_SOURCE}" "${BACKUP_RCLONE_STORAGE}:${BACKUP_RCLONE_PATH}" \
    # Skip based on checksum (if available) & size, not mod-time & size
    --checksum \
    # When synchronizing, delete files on destination before transferring
    --delete-during \
    # Delete files on dest excluded from sync
    --delete-excluded \
    # Read file exclude patterns from file
    --exclude-from=${RCLONE_EXCLUSIONS} \
    # Log everything to this file
    --log-file=${RCLONE_LOG} \
    # Show progress during transfer
    --progress
bf-done

rclone size \
    "${BACKUP_RCLONE_STORAGE}:${BACKUP_RCLONE_PATH}"
