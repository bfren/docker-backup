#!/command/with-contenv sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Test setup.
#======================================================================================================================

${BF_LIB}/test-setup


#======================================================================================================================
# Restore entire backup.
#======================================================================================================================

bf-echo "Restoring entire backup..."
PASSPHRASE=${BACKUP_DUPLICITY_PASSPHRASE} \
    duplicity \
    "rclone://${BACKUP_RCLONE_STORAGE}:${BACKUP_RCLONE_PATH}" \
    "${BACKUP_RESTORE}"
bf-done
