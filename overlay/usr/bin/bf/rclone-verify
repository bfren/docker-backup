#!/command/with-contenv sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Test setup.
#======================================================================================================================

${BF_LIB}/test-setup


#======================================================================================================================
# Verify mirror.
#======================================================================================================================

bf-echo "Verifying mirror..."
rclone check \
    --one-way \
    "${BACKUP_SOURCE}" \
    "${BACKUP_RCLONE_STORAGE}:${BACKUP_RCLONE_PATH}"
bf-done
