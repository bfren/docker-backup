#!/command/with-contenv sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Test setup.
#======================================================================================================================

${BF_LIB}/test-setup
${BF_LIB}/log-starting


#======================================================================================================================
# Verify mirror.
# Arguments:
#   --one-way           Check one way only, source files must exist on remote
#======================================================================================================================

bf-echo "Verifying mirror..."
rclone check "${BACKUP_SOURCE}" "${BACKUP_RCLONE_STORAGE}:${BACKUP_RCLONE_PATH}" \
    --one-way
bf-done

${BF_LIB}/log-done
